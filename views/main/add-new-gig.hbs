<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="overview">
                <h2 class="text-center">
                    Enter Your Product Details
                </h2>
                <br/>

                <div class="new-gig-card">
                    <form method="POST">
                        <div class="form-group">
                            <label>
                                Product Title
                            </label>
                            <input type="text" class="form-control" placeholder="I will do something" name="gig_title">

                        </div>
                        <div class="form-group">
                            <label>
                                Product Price
                            </label>
                            <input type="text" class="form-control" placeholder="$3" name="gig_price">
                            
                        </div>
                        <div class="form-group">
                            <label>
                                Product Category
                            </label>
                            <select class="form-control" name="gig_category">
                                <option selected>NONE</option>
                                <option> Programming </option>
                                <option> Website </option>
                                <option> Design </option>
                                <option> Marketing </option>
                                
                            </select>
                        </div>
                         <div class="form-group input-group-lg">
                            <label>
                                Product Description
                            </label>
                            <input type="text" class="form-control" placeholder="Describe the product" name="gig_about">
                        </div>

                        <button type="submit" class="btn btn-success btn-md"> Submit </button>
                        
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>